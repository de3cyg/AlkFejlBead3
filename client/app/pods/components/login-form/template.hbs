<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group {{if users.err "has-error"}}">
        <div class="form-group {{if users.neptun "has-error"}}">
            <label for="neptun" class="col-lg-2 control-label">Neptun</label>
            <div class="col-lg-10">
                <input class="form-control" id="neptun" name="neptun" type="text" value="{{data.neptun}}">
                <span class="help-block">{{users.neptun}}</span>
            </div>
        </div>
        <div class="form-group {{if users.password "has-error"}}">
            <label for="password" class="col-lg-2 control-label">Jelszó</label>
            <div class="col-lg-10">
                <input class="form-control" type="password" id="password" name="password" value="{{data.password}}">
                <span class="help-block">{{users.password}}</span>
                <span class="help-block">{{users.err}}</span>
            </div>
        </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Alaphelyzet</button>
                <button {{action 'submit'}} class="btn btn-primary">Küldés</button>
            </div>
        </div>
    </fieldset>
</form>